<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="digit_button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/digit_button_text</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/digit_button_background</item>
    </style>

    <style name="command_button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/command_button_text</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:background">?android:attr/selectableItemBackground</item>-->
        <item name="android:background">@drawable/command_button_background</item>
    </style>
</resources>